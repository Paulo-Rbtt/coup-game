# ─── Coup — Docker Environment ─────────────────────────────
# Usado automaticamente pelo docker-compose.yml via env_file
# NÃO copie este arquivo para .env (Docker faz isso automaticamente)

APP_NAME=Coup
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

# ⚠️  Se APP_KEY estiver vazia, será gerada automaticamente no entrypoint

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ─── Database (PostgreSQL) ───────────────────────────────
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=coup
DB_USERNAME=coup
DB_PASSWORD=secret

# ─── Session / Cache / Queue ─────────────────────────────
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=database

# ─── Laravel Reverb (WebSocket) ──────────────────────────
REVERB_APP_ID=597065
REVERB_APP_KEY=hdg3y2tj7k10krzct9ec
REVERB_APP_SECRET=jgr4qdlknzoqj9kfci5u
REVERB_HOST=0.0.0.0
REVERB_PORT=8080
REVERB_SCHEME=http

# ─── Vite (baked at build time) ──────────────────────────
# VITE_REVERB_HOST must be the PUBLIC hostname that
# browsers will use to reach the WebSocket (via nginx).
# For local Docker: localhost
# For AWS ECS: your ECS public IP / ALB domain
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST=localhost
VITE_REVERB_PORT=80
VITE_REVERB_SCHEME=http

VITE_APP_NAME="${APP_NAME}"
