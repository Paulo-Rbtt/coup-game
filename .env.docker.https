# ─── Coup — Docker Environment (HTTPS) ─────────────────────
# Exemplo de configuração para HTTPS
# Copie este arquivo para .env.docker quando quiser usar SSL

APP_NAME=Coup
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://ec2-3-15-41-63.us-east-2.compute.amazonaws.com

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ─── Database (PostgreSQL) ───────────────────────────────
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=coup
DB_USERNAME=coup
DB_PASSWORD=secret

# ─── Session / Cache / Queue ─────────────────────────────
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=database

# ─── Laravel Reverb (WebSocket) ──────────────────────────
REVERB_APP_ID=597065
REVERB_APP_KEY=hdg3y2tj7k10krzct9ec
REVERB_APP_SECRET=jgr4qdlknzoqj9kfci5u
REVERB_HOST=0.0.0.0
REVERB_PORT=8080
REVERB_SCHEME=http

# ─── Vite (baked at build time) ──────────────────────────
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST=ec2-3-15-41-63.us-east-2.compute.amazonaws.com
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME=https

VITE_APP_NAME="${APP_NAME}"

# ─── SSL / HTTPS ─────────────────────────────────────────
NGINX_CONFIG=./docker/nginx/default-https.conf
SSL_DOMAIN=ec2-3-15-41-63.us-east-2.compute.amazonaws.com
APP_PORT=80
APP_SSL_PORT=443
