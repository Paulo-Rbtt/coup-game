{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite --host 0.0.0.0",
        "serve": "php artisan serve --host=0.0.0.0 --port=8000",
        "reverb": "php artisan reverb:start --host=0.0.0.0 --port=8080",
        "full": "concurrently \"npm run serve\" \"npm run reverb\" \"npm run dev\""
    },
    "devDependencies": {
        "@laravel/echo-vue": "^2.3.0",
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.2.1",
        "laravel-echo": "^2.3.0",
        "laravel-vite-plugin": "^2.0.0",
        "pusher-js": "^8.4.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.7"
    },
    "dependencies": {
        "@vitejs/plugin-vue": "^6.0.4",
        "animejs": "^4.3.5",
        "vue": "^3.5.28"
    }
}
